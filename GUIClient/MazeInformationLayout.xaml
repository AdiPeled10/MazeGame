<UserControl x:Class="GUIClient.MazeInformationLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUIClient"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
   
    <StackPanel>
        
        <StackPanel Orientation="Horizontal" Width="200">
            <Label Content="Name:" Margin="0,50" Width="58" ></Label>
            <TextBox x:Name="nameTextBox" Width="134" Height="26" Margin="0,0,50,0" ></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="Number of Rows" Margin="20,0,0,0" Width="100"></Label>
            <TextBox x:Name="rowsTextBox" Width="130" ></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content= "Number of Columns" Margin="20,50,0,0"></Label>
            <TextBox x:Name="columnsTextBox" Height="26" Margin="5,52,0,0" Width="100"></TextBox>
        </StackPanel>
    </StackPanel>
</UserControl>
